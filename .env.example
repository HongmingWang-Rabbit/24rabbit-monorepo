# ==============================================
# 24Rabbit Environment Variables
# ==============================================
# Copy this file to .env and fill in the values

# Database (PostgreSQL with pgvector)
DATABASE_URL="postgresql://postgres:postgres@localhost:5433/rabbit24"

# Redis (for BullMQ queues)
REDIS_URL="redis://localhost:6379"

# Better Auth
BETTER_AUTH_URL="http://localhost:3000"
BETTER_AUTH_SECRET="" # Generate with: openssl rand -base64 32

# OAuth - Facebook
FACEBOOK_CLIENT_ID=""
FACEBOOK_CLIENT_SECRET=""

# AI - Gemini API
GEMINI_API_KEY="" # Get from https://makersuite.google.com/app/apikey

# Payments - Stripe
STRIPE_SECRET_KEY=""
STRIPE_WEBHOOK_SECRET=""
STRIPE_PRICE_STARTER="price_xxx"
STRIPE_PRICE_GROWTH="price_xxx"
STRIPE_PRICE_BUSINESS="price_xxx"

# Storage - Cloudflare R2 (or MinIO for local development)
# For local dev with MinIO (docker-compose), use these values:
R2_ACCESS_KEY_ID="minioadmin"
R2_SECRET_ACCESS_KEY="minioadmin"
R2_BUCKET_NAME="24rabbit"
R2_ENDPOINT="http://localhost:9000"
R2_PUBLIC_URL="http://localhost:9000/24rabbit"
# For production with Cloudflare R2, replace with your R2 credentials:
# R2_ENDPOINT="https://xxx.r2.cloudflarestorage.com"

# Encryption Key (32 bytes hex for AES-256)
# Generate with: openssl rand -hex 32
ENCRYPTION_KEY=""

# Optional: Development settings
# NODE_ENV="development"
